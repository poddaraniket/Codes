#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	vector<int> pos,neg;
	int n,i,diff,ans=0,temp,c=0,p=0,l,r;
	cin>>n;
	int a[n],b[n];
	for(i=0;i<n;i++)
	  cin>>a[i];
	for(i=0;i<n;i++)
	  cin>>b[i];
	for(i=0;i<n;i++)
	 {
	     diff=a[i]-b[i];
	     if(diff>0)
	      {
	          c++;
	          pos.push_back(diff);
	      }
	     else if(diff==0)
	      p++;
	     else
	       neg.push_back(abs(diff));
	 }
	sort(pos.begin(),pos.end());
	sort(neg.begin(),neg.end());
	for(i=neg.size()-1;i>=0;i--)
	 {
	     //cout<<"*"<<neg[i]<<endl;
	     if(neg[i]<=pos[0])
	       {
	           ans+=(i+1)*pos.size();
	           break;
	       }
	     else
	      {
	         temp=neg[i]; 
	         l=0;
	         r=pos.size()-1;
	         while(l<=r)      //BINARY SEARCH
	         {
	             int mid=(l+r)/2;
	             if(temp<pos[mid])
	              {
	                  if(temp<pos[mid-1])
	                    r=mid-1;
	                  else
	                    {
	                       if(temp==pos[mid-1])
	                         ans+=(pos.size()-(mid-1));
	                       else
	                         ans+=pos.size()-mid;
	                       break;  
	                    }
	              }
	             else
	               {
	                   if(temp<=pos[mid+1])
	                    {
	                       ans+=(pos.size()-(mid+1));
	                       break;
	                    }
	                   else
	                     l=mid+1;
	               }
	         }
	      }
	 }
	//cout<<ans<<endl; 
	ans+=(((c*(c-1))/2)+(p*c)); 
	cout<<ans<<endl;
	return 0;
}
