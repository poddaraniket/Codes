#include <bits/stdc++.h>
using namespace std;

int main() {
  vector<int> v,v1;
  int n,num,i=0,c=0;
  cin>>n;
  while(i<n)
   {
     cin>>num;
     v.push_back(num);
     i++;
   }
  sort(v.begin(),v.end());
  if(v[n-1]>=v[n-2]+v[n-3])
    cout<<"NO";
  else
    {
        cout<<"YES"<<endl;
        cout<<v[n-3]<<" ";
        v.erase(v.begin()+(n-3));
        for(i=v.size()-1;i>=0;i--)
         cout<<v[i]<<" ";
        cout<<endl; 
    }
}
