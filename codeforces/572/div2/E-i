#include <bits/stdc++.h>

using namespace std;

long long p;

long long mult(long long a,long long b)
 {
   return (a*b)%p;
 }

long long pow4(long long x)
 {
   return mult(mult(x,x),mult(x,x));
 }

int main() {
  map<long long,long long> mp;
  long long n,k,i,num,s,rem,div,d,ans=0;
  // long long ans=0;
  // double sum;
  cin>>n>>p>>k;
   for(i=0;i<n;i++)
     {
       cin>>num;
       s=pow4(num)-mult(k,num);
       if(s<0)
        {
          div=(abs(s)/p)+1;
          rem=(p*div)+s;
        }
       else
         rem=s%p;
      ans+=mp[rem];
      mp[rem]++;   
     }
    cout<<ans<<endl; 
    
}