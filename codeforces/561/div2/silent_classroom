#include <bits/stdc++.h>

using namespace std;

int main() {
   int a[30]={0};
   string name;
   int i,n,p,sum=0,q;
   cin>>n;
   for(i=0;i<n;i++)
    {
      cin>>name;
      a[name[0]-96]++;
    }
  for(i=1;i<=26;i++)
    {
      if(a[i]>2)
       {
         p=a[i]/2;
         q=a[i]-p;
         sum+=(p*(p-1))/2;
         sum+=(q*(q-1))/2;
       }
    } 
  cout<<sum<<endl;      
}