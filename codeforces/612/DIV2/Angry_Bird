#include <bits/stdc++.h>

using namespace std;

int main() {
  int t,n,i,j,c=0,count=0,maxi=0;
  string s;
  cin>>t;
  while(t--)
   {
     maxi=0;
     c=0;
     count=0;
     cin>>n;
     cin>>s;
     for(i=0;i<n;i++)
      {
        if(s[i]=='A')
         {
          // cout<<i<<endl;
           c=1;
           break;
         }
      }
    if(c==1)
     {
       //cout<<"YES"<<endl;
       for(j=i+1;j<n;j++)
        {
          if(s[j]=='P')
           {
             count++;
             //cout<<"hi"<<endl;
           }
          else 
          {
               maxi=max(maxi,count); 
               count=0;
          }
        }
      maxi=max(maxi,count);    
     }
    cout<<maxi<<endl; 
   }
}