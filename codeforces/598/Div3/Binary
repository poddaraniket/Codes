#include <bits/stdc++.h>

using namespace std;

int main() {
   int q,n,k,i,cnt=0,p=0;
   string s;
   cin>>q;
   while(q--)
    {
      p=0;
      cnt=0;
      cin>>n>>k;
      cin>>s;
      vector<int> v;
     // vector<int>::iterator it;
      // vector<int> loc;
      for(i=0;i<n;i++)
       {
         v.push_back(s[i]-'0');
         //cout<<v[i]<<endl;
       }
      for(i=0;i<n;i++)
       {
         if(k<1)
          break;
         else
          {
            if(v[i]==1)
             cnt++;
            else
             {
               if((k-cnt)>0)
                {
                 //it = vector.begin()+i; 
                 v.erase(v.begin()+i);
                 v.insert(v.begin()+p,0);
                 k-=cnt;
                 p++;
                }
               else
                {
                  //it = myvector.begin()+i;
                  v.erase(v.begin()+i);
                  v.insert(v.begin()+i-k,0);
                  k=0;
                }
             } 
          } 
       }
      for(i=0;i<n;i++)
       cout<<v[i];
      cout<<endl;  
    }
}