#include <bits/stdc++.h>

using namespace std;

int count(string s,int d)
 {
    int i,p=0;
    for(i=0;i<s.size();i++)
      {
        if(s[i]=='1')
         p++;
      }
    if(d%2==0 && p%2==0)
     return 1;
    else if(d%2!=0 && p%2!=0)
      return 1;
    else 
      return 0;   
 }

int main() {
  string a,b;
  vector<string> c;
  int i,j,ans=0,d=0;
  cin>>a;
  cin>>b;
  int p=b.length();
  for(i=0;i<b.length();i++)
    {
      if(b[i]=='1')
        d++;
    }
  //cout<<d<<endl;  
  for(i=0;i<=a.length()-p;i++)
    {
      c.push_back(a.substr(i,p));
    // cout<<c[i]<<endl;
    }
  for(i=0;i<c.size();i++)
    {
      ans+=count(c[i],d);
    }
  cout<<ans<<endl;   
}