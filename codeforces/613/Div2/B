#include <bits/stdc++.h>
 
using namespace std;
 
int main() {
  long long int t,n,sum=0,i,c=0;
  cin>>t;
  while(t--)
   {
     sum=0;
     c=0;
     cin>>n;
     long long int a[n];
     for(i=0;i<n;i++)
      {
        cin>>a[i];
      } 
    for(i=0;i<n;i++)
      {
         sum+=a[i];
         if(sum<=0)
          {
            c=1;
            break;
          } 
      }
    if(c==0)
    {
      sum=0;
      for(i=n-1;i>=0;i--)
      {
         sum+=a[i];
         if(sum<=0)
          {
            c=1;
            break;
          } 
      }
     if(c==1)
       cout<<"NO"<<endl;
     else
       cout<<"YES"<<endl;    
    }  
  else
    cout<<"NO"<<endl;  
}
}