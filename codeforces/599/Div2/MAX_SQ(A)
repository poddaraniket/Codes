#include <bits/stdc++.h>
 
using namespace std;
 
int main() {
   int t,n,c=0,s=0,num,i;
   cin>>t;
   while(t--)
    {
      c=0;
      s=0;
      cin>>n;
      int a[n+1]={0};
      for(i=0;i<n;i++)
       {
         cin>>num;
         a[num]++;
       }
      for(i=n;i>0;i--)
       {
         c+=a[i];
         if(c>=i)
           break;
       }
      cout<<i<<endl;  
    }
}