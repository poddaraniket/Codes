#include <bits/stdc++.h>

using namespace std;

int main() {
      long long int n,i,num,sum=0;
      vector<long long int> v,v1;
      cin>>n;
      for(i=0;i<n;i++)
       {
          cin>>num;
          num*=(i+1)*(n-i);
          v.push_back(num);
       }
      sort(v.begin(),v.end()); 
      for(i=0;i<n;i++)
        {
          cin>>num;
          v1.push_back(num);
        } 
      sort(v1.begin(),v1.end());
      for(i=0;i<n;i++)
        {
          sum+=(((v[i]%998244353)*(v1[n-(i+1)]%998244353)))%998244353;
        }
     cout<<(sum%998244353)<<endl;   
    //  for(i=0;i<n;i++)
    //    cout<<v[i]<<endl;  
}