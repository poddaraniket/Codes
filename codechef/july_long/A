#include <bits/stdc++.h>

using namespace std;

int main() {
  int a[100000];
  long long t,n,s=0,c=0,i;
  double d,pro,diff;
  cin>>t;
  while(t--)
  {
    c=0;
    s=0;
    cin>>n;
    for(i=0;i<n;i++)
     {
       cin>>a[i];
       s+=a[i];
     }
    d=(double)s/n;
    pro=d*(n-1);
    diff=s-pro;
    for(i=0;i<n;i++)
     {
       if(a[i]==diff)
        {
          c=1;
          cout<<i+1<<endl;
          break;
        }
     } 
    if(c==0)
     cout<<"Impossible"<<endl; 
  }
}