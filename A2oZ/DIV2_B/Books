#include <bits/stdc++.h>

using namespace std;

int main() {
  int n,t,i,c=0,maxi=0,sum=0,p=0;
  cin>>n>>t;
  int s[n];
  for(i=0;i<n;i++)
   cin>>s[i];
  sum+=s[0];
  i=0;
  while(i<n)
   {   
     if(sum<=t)
      {
        i++;
        sum+=s[i];
        c++;
      }
     else
       {
         maxi=max(c,maxi);
         c--;
         sum-=s[p];
         p++; 
       }
   }
  cout<<max(maxi,c)<<endl; 
}