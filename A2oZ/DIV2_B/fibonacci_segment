#include <bits/stdc++.h>

using namespace std;

int main() {
  int i,n,maxi=2,c=2;
  cin>>n;
  int a[n];
  for(i=0;i<n;i++)
   {
     cin>>a[i];
   }
  if(n>2)
   {
     for(i=2;i<n;i++)
      {
        if(a[i]==a[i-1]+a[i-2])
          c++;
        else
         {
          maxi=max(maxi,c);  
          c=2;
         }
      } 
    maxi=max(maxi,c);
    cout<<maxi<<endl; 
   } 
  else
    cout<<n<<endl; 
}