#include <bits/stdc++.h>
#define MAX 1000000000
using namespace std;


int main()
{
    int n,i,l=-1,r=-1,li,ri,c=0,temp;
    cin>>n;
    int a[n+2];
    a[0]=0;
    a[n+1]=MAX;
    for(i=1;i<=n;i++)
     {
         cin>>a[i];
     }
    // for(i=0;i<=n+1;i++)
    //   cout<<a[i]<<endl;
    // cout<<endl;  
    for(i=1;i<=n;i++)
     {
        if(a[i]>a[i+1])
         {
             
             l=a[i];
             li=i;
             break;
         }
     }
    if(l==-1)
      {
        cout<<"yes"<<endl;
        cout<<"1"<<" "<<"1"<<endl;
      }
    else
    {
     for(;i<=n;i++)
      {
          if(a[i]<a[i+1])
           {
              r=a[i];
              ri=i;
              break;
           }
      }
    // cout<<li<<" "<<ri<<endl;  
    int lis=li;
    int ris=ri;
    while(li<=ri)
    {
    //   cout<<"hi"<<endl;
      temp=a[li];
      a[li]=a[ri];
      a[ri]=temp;
      li++;
      ri--;
    }
    for(i=1;i<n;i++)
      {
          if(a[i]>a[i+1])
           {
              c++;
            //   cout<<a[i]<<" "<<a[i+1]<<endl;
           }
            
      }
    if(c>0) 
      cout<<"no"<<endl;
    else
     {
         cout<<"yes"<<endl;
         cout<<lis<<" "<<ris<<endl;
     }
    }
}