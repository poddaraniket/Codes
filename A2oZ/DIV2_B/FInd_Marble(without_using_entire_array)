#include <bits/stdc++.h>

using namespace std;
 
int main()  
{
  int n,s,t,c=0,count=0,i,loc,temp=0;
  cin>>n>>s>>t;
  loc=s;
  int a[n+1];
  a[0]=0;
  for(i=1;i<=n;i++)
   {
       cin>>a[i];
   }
   if(s==t)
    {
        if(a[s]-s==0)
         cout<<"0"<<endl;
        else
         c=1;
    }
    else
      {
          if(a[s]-s==0 || a[t]-t==0)
            cout<<"-1"<<endl;
          else 
            c=1;
      }
    if(c==1)
     {
        while(abs(loc-t)!=0 && abs(temp-s)!=0)
         {
            loc=a[loc]; 
            count++;
            temp=loc;
         }
        if(abs(temp-s)==0)
          cout<<"-1"<<endl;
        else  
         cout<<count<<endl;  
     }
}