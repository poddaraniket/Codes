#include <bits/stdc++.h>

using namespace std;
 
int main()  
{
   int x,y,n,c,i,a[6],cal;
   cin>>x>>y;
   a[1]=x;
   if(a[1]<0)
     a[1]+=1000000007;
    else
     a[1]%=1000000007;
   a[2]=y;
   if(a[2]<0)
     a[2]+=1000000007;
    else
     a[2]%=1000000007;
   for(i=3;i<6;i++)
     {
        a[i]=a[i-1]-a[i-2]; 
        if(a[i]<0)
         a[i]+=1000000007;
        else
         a[i]%=1000000007;
     }
    a[0]=a[i-1]-a[i-2]; 
    if(a[0]<0)
      a[0]+=1000000007;
    else
      a[0]%=1000000007;
    cin>>n;
    // cout<<n<<endl;
    cal=n%6;
    // cout<<cal<<endl;
    cout<<a[cal]<<endl;
}