#include <bits/stdc++.h>

using namespace std;

int main()
{
    string s;
    int k,n,sum=0,maxi=0,i;
    cin>>s;
    cin>>k;
    n=s.length();
    int a[27];
    a[0]=0;
    for(i=1;i<=26;i++)
     {
         cin>>a[i];
         maxi=max(a[i],maxi);
     }
    for(i=0;i<n;i++)
     {
         sum+=(a[s[i]-96]*(i+1));
     }
    while(k)
     {
        sum+=(maxi*(n+k));
        k--;
     }
    cout<<sum<<endl; 
}