#include <bits/stdc++.h>
using namespace std;


int main()
{
    long double n,l,i,diff,maxi=0.0,maxl,max0;
    cin>>n>>l;
    vector <long double> a(n);
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    sort(a.begin(),a.end());
    max0=a[0];
    maxl=l-a[n-1];
    maxi=max(max0,maxl);
    // cout<<maxi<<endl;
    for(i=0;i<n-1;i++)
     {
         diff=abs(a[i]-a[i+1]);
         maxi=max(maxi,diff/2);
     }
    cout<<fixed<<setprecision(10)<<maxi<<endl;
}