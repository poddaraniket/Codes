#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n,t,i;
    char s;
    cin>>n>>t;
    vector<char> v;
    for(i=0;i<n;i++)
     {
         cin>>s;
         v.push_back(s);
     }
    while(t--)
    {
        i=0;
        while(i<n-1)
        {
            if(v[i]=='B')
             {
                 if(v[i+1]=='G')
                   {
                       v[i]='G';
                       v[i+1]='B';
                       i+=2;
                   }
                 else
                   i++;
             }
            else
              i++;
        }
    }
    for(i=0;i<n;i++)
      cout<<v[i];
    cout<<endl;  
}